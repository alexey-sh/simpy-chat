            z-index: 2;
        }
        .form-signin input.room {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }
        .form-signin input.nick {
            margin-bottom: -1px;
            border-radius: 0;

        }
        .form-signin input[type="password"] {
            margin-bottom: 0;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }
        .form-signin .text-danger {
            color: #a94442;
        }
        .langs {
            float: right;
            margin-top: -30px;
        }


        @media screen and (max-width: 700px) {
            .users-list {
                width: 140px;
            }
            .users-list li {
                width: 140px;
            }
            .chat-list {
                margin-left: -150px;
                padding-left: 150px;
            }
            .room-name {
                width: 150px;
            }
            .wrap-chat-form {
                left: 160px;
            }
        }

    </style>
